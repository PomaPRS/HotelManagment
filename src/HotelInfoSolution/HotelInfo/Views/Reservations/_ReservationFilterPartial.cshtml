@model HotelInfo.Models.ReservationFilterModel

<div class="panel panel-default">
    <div class="panel-body">
        @using (Html.BeginForm("Index", "Reservations", null, FormMethod.Get, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.HotelTitle)</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.HotelTitle, htmlAttributes: new {@class = "form-control"})
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.RoomNumber)</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.RoomNumber, htmlAttributes: new {@class = "form-control"})
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.FromAdvance)</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.FromAdvance, htmlAttributes: new {@class = "form-control"})
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.ToAdvance)</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.ToAdvance, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.FromArrivalDate)</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.FromArrivalDate, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.ToArrivalDate)</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.ToArrivalDate, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.FromDepartureDate)</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.FromDepartureDate, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.ToDepartureDate)</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.ToDepartureDate, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.VisitorName)</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.VisitorName, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">
                    @Html.DisplayNameFor(m => m.SortingType)
                </label>
                <div class="col-sm-5 vertical-input-group">
                    @Html.EnumDropDownListFor(m => m.SortingType, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10 ">
                    <input type="submit" class="btn btn-primary" value="Поиск" />
                </div>
            </div>
        }
    </div>
</div>