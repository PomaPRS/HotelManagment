@model HotelInfo.Models.VisitorViewModel

@{
    var name = string.Format("{0} {1} {2}", Model.FirstName, Model.SecondName, Model.MiddleName);
    ViewBag.Title = name;
}

<h2>@name</h2>

<div class="panel panel-default">
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FirstName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.SecondName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SecondName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MiddleName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MiddleName)
            </dd>
        </dl>

        <dl class="dl-horizontal">
            <dd>
                @Html.ActionLink("Изменить", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Удалить", "Delete", new { id = Model.Id }, new { @class = "btn btn-default" })
            </dd>
        </dl>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        @Html.LabelFor(x => x.Reservations)
    </div>

    @if (Model.Reservations.Any())
    {
        <table class="table table-bordered">
            <tr>
                <th>Имя</th>
            </tr>
            @foreach (var item in Model.Reservations)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.Text, "Details", "Reservations", new { id = item.Value }, null)
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <div class="panel-body">Список пуст.</div>
    }
</div>

<div>
    @Html.ActionLink("Назад", "Index")
</div>
