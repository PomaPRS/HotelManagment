@model HotelInfo.Models.PositionEditModel

@{
    ViewBag.Title = string.Format("{0} - {1}", Model.Title, "Редактирование");
}

<h2>@Model.Title</h2>

<div class="panel panel-default">
    <div class="panel-body">
        @using (Html.BeginForm("Edit", "Positions", null, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.Title)</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.Title, htmlAttributes: new {@class = "form-control"})
                    @Html.ValidationMessageFor(m => m.Title)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10 ">
                    <input type="submit" class="btn btn-primary" value="Сохранить"/>
                </div>
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Назад", "Index")
</div>
