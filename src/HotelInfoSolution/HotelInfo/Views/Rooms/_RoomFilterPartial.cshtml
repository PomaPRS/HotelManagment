@model HotelInfo.Models.RoomFilterModel

<div class="panel panel-default">
    <div class="panel-body">
        @using (Html.BeginForm("Index", "Rooms", null, FormMethod.Get, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.HotelTitle)</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.HotelTitle, htmlAttributes: new {@class = "form-control"})
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.Number)</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.Number, htmlAttributes: new {@class = "form-control"})
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.FromPlaceCount)</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.FromPlaceCount, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.ToPlaceCount)</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.ToPlaceCount, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.FromCostPerDay)</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.FromCostPerDay, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.ToCostPerDay)</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.ToCostPerDay, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.Description)</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.Description, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.State)</label>
                <div class="col-sm-5">
                    @Html.EnumDropDownListFor(m => m.State, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">
                    @Html.DisplayNameFor(m => m.SortingType)
                </label>
                <div class="col-sm-5 vertical-input-group">
                    @Html.EnumDropDownListFor(m => m.SortingType, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10 ">
                    <input type="submit" class="btn btn-primary" value="Поиск" />
                </div>
            </div>
        }
    </div>
</div>