@model HotelInfo.Models.RoomCreateModel

@{
    ViewBag.Title = "Добавить гостиничный номер";
}

<h2>@ViewBag.Title</h2>

<div class="panel panel-default">
    <div class="panel-body">
        @using (Html.BeginForm("Create", "Rooms", null, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.Number)</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.Number, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Number)
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.HotelTitle)</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.HotelTitle, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.HotelTitle)
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.CostPerDay)</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.CostPerDay, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.CostPerDay)
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.PlaceCount)</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.PlaceCount, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PlaceCount)
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.State)</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.State, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.State)
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.Description)</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.Description, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Description)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10 ">
                    <input type="submit" class="btn btn-primary" value="Добавить"/>
                </div>
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Назад", "Index")
</div>