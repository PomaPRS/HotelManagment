@model HotelInfo.Models.WorkerViewModel

@{
    var name = string.Format("{0} {1} {2}", Model.FirstName, Model.SecondName, Model.MiddleName);
    ViewBag.Title = name;
}

<h2>@name</h2>

<div class="panel panel-default">
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FirstName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.SecondName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SecondName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MiddleName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MiddleName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IndividualId)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IndividualId)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.HotelTitle)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.HotelTitle)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PositionTitle)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PositionTitle)
            </dd>
        </dl>

        <dl class="dl-horizontal">
            <dd>
                @Html.ActionLink("Изменить", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Удалить", "Delete", new { id = Model.Id }, new { @class = "btn btn-default" })
            </dd>
        </dl>
    </div>
</div>

<div>
    @Html.ActionLink("Назад", "Index")
</div>
