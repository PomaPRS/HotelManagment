@model HotelInfo.Models.WorkerIndexViewModel

@{
    ViewBag.Title = "Сотрудники";
}

<h2>@ViewBag.Title</h2>
@{
    Html.RenderPartial("_WorkerFilterPartial", Model.Filter);
}
<div class="panel panel-default">
    <div class="panel-heading">
        @ViewBag.Title
        <span class="pull-right">
            @Html.ActionLink("Добавить сотрудника", "Create", null, new { @class = "btn btn-xs btn-default" })
        </span>
    </div>

    @if (Model.Workers.Any())
    {
        <table class="table table-bordered">
            <tr>
                <th>Имя</th>
            </tr>
            @foreach (var item in Model.Workers)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.Text, "Details", new { id = item.Value })
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <div class="panel-body">Список сотрудников пуст.</div>
    }
</div>
