@model HotelInfo.Models.WorkerFilterModel

<div class="panel panel-default">
    <div class="panel-body">
        @using (Html.BeginForm("Index", "Workers", null, FormMethod.Get, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.Name)</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.Name, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.IndividualId)</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.IndividualId, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.HotelTitle)</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.HotelTitle, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.PositionTitle)</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.PositionTitle, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">
                    @Html.DisplayNameFor(m => m.SortingType)
                </label>
                <div class="col-sm-5 vertical-input-group">
                    @Html.EnumDropDownListFor(m => m.SortingType, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10 ">
                    <input type="submit" class="btn btn-primary" value="Поиск" />
                </div>
            </div>
        }
    </div>
</div>